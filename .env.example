# Server
NODE_ENV=development
PORT=3000

# Dashboard / CORS (comma-separated for multiple origins)
# Include the port your frontend runs on (e.g. 3001 for Next.js when backend uses 3000)
CORS_ORIGIN=http://localhost:5173,http://localhost:3001
DASHBOARD_URL=http://localhost:3001

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# PostgreSQL + PostGIS
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=eco_relais
PG_USER=postgres
PG_PASSWORD=postgres

# Redis (sessions / rate limit store)
REDIS_URL=redis://localhost:6379

# Stripe (Connect: client payments + partner payouts)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AWS S3 (package photo uploads)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=eco-relais-uploads

# Firebase Admin (push notifications) â€“ JSON string of service account
# FIREBASE_CREDENTIALS='{"type":"service_account",...}'

